<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/image_container_padding"
    tools:context="com.ishan1608.materialtest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material Test"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/material_heading_textView"
        android:elevation="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff10008"/>

    <ImageView
        android:layout_width="@dimen/image_small_dimension_twice"
        android:layout_height="@dimen/image_small_dimension_twice"
        android:id="@+id/imageView_1"
        android:src="@drawable/small_1"
        android:elevation="50dp"
        android:layout_below="@+id/material_heading_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
